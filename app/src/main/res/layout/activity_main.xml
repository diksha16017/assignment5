<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#EF5350"
    android:layout_height="match_parent"
    android:fillViewport="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/activity_main"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IIITD"
            android:textSize="35sp"
            android:textStyle="bold|italic"
            android:textColor="#ffffff"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:text="----------------"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            android:textSize="25sp"
            android:id="@+id/download_text"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="20dp"
            android:text="Okhla Phase-3, Near GovindPuri Metro Station. A well known institute in India mainly known for its studing environment. "/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="65dp"
            android:background="@drawable/my_button_add"
            android:text="More Info.."
            android:textColor="#ffffff"
            android:onClick="onClickDownload"
            android:clickable="true"
            android:id="@+id/btn_abt"
            android:focusable="true"
            android:layout_marginBottom="10dp"
            android:textStyle="bold|italic"
            android:textSize="25sp"/>

        <TextView
            android:layout_marginTop="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/download"
            android:text=""
            android:textSize="18dp"
            android:layout_marginBottom="20dp"
            android:textColor="#ffffff"/>

    </LinearLayout>


</ScrollView>